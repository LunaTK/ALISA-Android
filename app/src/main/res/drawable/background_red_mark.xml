<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <stroke
                android:color="@color/borderColorSilver"
                android:width="1dp"/>
            <solid
                android:color="@android:color/white"/>
        </shape>
    </item>

    <item
        android:gravity="bottom"
        android:width="5dp"
        android:height="30dp"
        android:left="1dp"
        android:bottom="5dp">
        <shape>
            <solid
                android:color="?attr/colorPrimary"/>
        </shape>
    </item>

</layer-list>