        android:layout_marginBottom="11dp"
        android:orientation="horizontal">

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="7dp"
            android:background="@drawable/circle" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="7dp"
            android:background="@drawable/circle" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="7dp"
            android:background="@drawable/circle" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="7dp"
            android:background="@drawable/circle" />


    </LinearLayout>

</RelativeLayout>